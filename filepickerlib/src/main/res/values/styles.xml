<resources>

    <!-- Base application theme. -->
    <style name="DriveFilePickerAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/space_kit_n00</item>
        <item name="colorPrimaryDark">@color/space_kit_n00</item>
        <item name="colorAccent">@color/space_kit_b500</item>
        <item name="android:statusBarColor">@color/space_kit_n00</item>
        <item name="android:windowBackground">@color/space_kit_n00</item>
    </style>

    <style name="DriveFilePickerAppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="CommonDialog" parent="android:Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_transparent</item>
    </style>

    <style name="CommonAnimTopRight" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/widget_common_zoom_from_top_right</item>
        <item name="android:windowExitAnimation">@anim/widget_common_zoom_to_top_right</item>
    </style>

    <style name="ConfirmDialog" parent="Theme.AppCompat.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@drawable/widget_confirm_dialog_round_corner</item>
        <!-- 悬浮在Activity上 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

</resources>
